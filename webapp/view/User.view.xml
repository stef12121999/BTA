<mvc:View
	height="100%"
	controllerName="intern2020.controller.User"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">

	<Page
		showHeader="false"
		enableScrolling="true"
		class="sapUiContentPadding"
		showNavButton="false" >
    
		<content>
			<VBox>
				<MessageStrip
					text="You are logged in as USER."
					type="Information"
					showIcon="true">
				</MessageStrip>

				<Slider value="100" liveChange="onSliderMoved"/>
                <Button  press="onGoToLogin" text="Go Back" icon="sap-icon://nav-back"/>
			</VBox>

			<Label/>

			<Table
				id="idProductsTable"
				items="{/RequestSet}">
				<headerToolbar>
					<OverflowToolbar id="otbSubheader">
						<ToolbarSpacer/>
						<SearchField id="maxPrice" liveChange="onFilter">
							<layoutData><OverflowToolbarLayoutData minWidth="200px" maxWidth="300px" shrinkable="true"/></layoutData>
						</SearchField>
						<Button text="Reset" type="Transparent" press="onReset"/>
						<OverflowToolbarButton type="Transparent" text="Sort" icon="sap-icon://sort" press="onSort"/>
						<OverflowToolbarButton type="Transparent" text="Group" icon="sap-icon://group-2" press="onGroup"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="12em"><Text text="Filter" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Date" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End"><Text text="Name" /></Column>
					<Column hAlign="End"><Text text="Location" /></Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{RId}" text="{ProductId}" />
							<Text text="{UId}" />
							<Text text="{UId}" />
							<Text text="{TripId}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<OverflowToolbar id="otbFooter">
				<ToolbarSpacer/>
				
				<OverflowToolbarButton text="Delete" icon="sap-icon://delete"/>
				<OverflowToolbarButton text="Edit" icon="sap-icon://edit"/>
				<OverflowToolbarButton text="Add" icon="sap-icon://add"/>
				<OverflowToolbarButton text="Favorite" icon="sap-icon://favorite"/>
				<OverflowToolbarButton text="Flag" icon="sap-icon://flag"/>
				<OverflowToolbarToggleButton text="Toggle" icon="sap-icon://action" press="onTogglePress"/>

			</OverflowToolbar>
		</footer>

	</Page>
</mvc:View>
